<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.pongsakorn.policeeye">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HistoryActivity"
            android:label="@string/history" />
        <activity
            android:name=".activity.SketchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.IdentikitActivity"
            android:label="@string/sketch_board" />
        <activity
            android:name=".activity.DetailActivity"
            android:label="@string/detail" />
        <activity
            android:name=".activity.ScanningActivity"
            android:label="@string/scanning" />
        <activity
            android:name=".activity.ResultActivity"
            android:label="@string/result" />
    </application>

</manifest>
