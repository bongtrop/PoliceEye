<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.pongsakorn.policeeye.activity.IdentikitActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycViewFaceComposite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_face_composite_height"
        android:layout_alignParentBottom="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycViewFaceCompStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_face_composite_height"
        android:layout_above="@id/recycViewFaceComposite" />

    <RelativeLayout
        android:id="@+id/layoutSketch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_above="@id/recycViewFaceCompStyle">

        <ImageView
            android:id="@+id/ivJaw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="120dp"
            android:scaleType="matrix"
            android:src="@mipmap/jaw505"/>

        <ImageView
            android:id="@+id/ivHair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="125dp"
            android:scaleType="matrix"
            android:src="@mipmap/hair505"/>

        <ImageView
            android:id="@+id/ivEyebrows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="140dp"
            android:scaleType="matrix"
            android:src="@mipmap/eyebrows505"/>

        <ImageView
            android:id="@+id/ivEyes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="140dp"
            android:scaleType="matrix"
            android:src="@mipmap/eyes505"/>

        <ImageView
            android:id="@+id/ivNose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="170dp"
            android:scaleType="matrix"
            android:src="@mipmap/nose505"/>

        <ImageView
            android:id="@+id/ivMouth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="215dp"
            android:layout_marginLeft="160dp"
            android:scaleType="matrix"
            android:src="@mipmap/mouth505"/>

    </RelativeLayout>

</RelativeLayout>
